<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.barkitapp.android" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Parse Recv Notifications -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- TODO REMOVE ME IF POSSIBLE -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.barkitapp.android.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.barkitapp.android.permission.C2D_MESSAGE" />

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".base.Setup"
        android:allowBackup="true"
        tools:replace="android:icon"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo" >
        <meta-data
            android:name="DATABASE"
            android:value="barkit.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.barkitapp.android" />
        <meta-data
            android:name="com.parse.push.notification_icon"
            android:resource="@drawable/ic_bark" />

        <activity
            android:name=".base.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".prime.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bark_detail.BarkDetailActivity"
            android:parentActivityName=".prime.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>

        <!--
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            tools:replace="android:value" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".places.MapsActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"
            android:parentActivityName=".places.PlacesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>

        <activity
            android:name=".prime.PictureActivity"
            android:label="Picture View"
            android:screenOrientation="portrait"
            android:parentActivityName=".prime.MainActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>

        <activity
            android:name=".prime.Custom_CameraActivity"
            android:label="Camera View"
            android:screenOrientation="portrait"
            android:parentActivityName=".prime.MainActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".places.PlacesActivity"
            android:label="@string/title_activity_places"
            android:parentActivityName=".prime.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".prime.ReportBugActivity"
            android:label="@string/report_error"
            android:parentActivityName=".prime.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".prime.FeedbackActivity"
            android:label="@string/your_opinion_counts"
            android:parentActivityName=".prime.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".prime.ProfileActivity"
            android:label="@string/profile"
            android:parentActivityName=".prime.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".prime.MainActivity" />
        </activity>

        <service android:name="com.parse.PushService" />

        <receiver android:name="com.parse.ParseBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".notification.MyPushBroadcastReciever"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.parse.push.intent.RECEIVE" />
                <action android:name="com.parse.push.intent.DELETE" />
                <action android:name="com.parse.push.intent.OPEN" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.parse.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

<!--                   IMPORTANT: Change "com.parse.starter" to match your app's package name. -->
                <category android:name="com.barkitapp.android" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
