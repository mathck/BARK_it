<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reply"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/upvote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="top"
                    android:scaleType="center"
                    android:src="@drawable/ic_keyboard_arrow_up_white_48dp"
                    android:onClick="upvote"/>
                <LinearLayout
                    android:id="@+id/vote_layout"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/upvote"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/votes_count"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColor="@color/secondary_text"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:text="7" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/downvote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_below="@id/vote_layout"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_keyboard_arrow_down_white_48dp"
                    android:onClick="downvote"/>
            <RelativeLayout
                android:layout_marginTop="18dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:maxLength="300"
                android:textColor="@color/primary_text"
                android:ellipsize="end"
                android:autoLink="web"
                android:textColorLink="@color/blue_500"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/this_is_a_bark" />

            <RelativeLayout
                android:layout_below="@id/text1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="18dp">
                <ImageView
                    android:id="@+id/hours_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="1dp"
                    android:layout_alignParentBottom="true"
                    android:tint="@color/secondary_text"
                    android:src="@drawable/ic_access_time_black_48dp"/>
                <TextView
                    android:layout_toRightOf="@id/hours_icon"
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:paddingRight="20dp"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:text="0 m" />
                <!--
                <ImageView
                    android:id="@+id/distance_icon"
                    android:layout_toRightOf="@id/hours"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="1dp"
                    android:layout_alignParentBottom="true"
                    android:tint="@color/secondary_text"
                    android:src="@drawable/ic_directions_walk_black_48dp"/>
                -->
                <TextView
                    android:layout_toRightOf="@id/hours"
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_alignParentBottom="true"
                    android:text="0 km" />
                <ImageView
                    android:layout_toRightOf="@id/distance"
                    android:id="@+id/flagReply"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"
                    android:tint="@color/card_background"
                    android:src="@drawable/ic_flag_white_48dp"/>
                <TextView
                    android:layout_toRightOf="@id/flagReply"
                    android:id="@+id/op"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="8sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/badge"
                    android:layout_alignParentBottom="true"
                    android:text="Bark Creator" />
            </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>