<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/barkit" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:src="@mipmap/splash"
        android:contentDescription="BARKT it Logo" />

    <TextView
        android:id="@+id/speech"
        android:layout_width="114dp"
        android:layout_height="67dp"
        android:layout_marginRight="12dp"
        android:layout_alignTop="@id/imgLogo"
        android:layout_alignRight="@id/imgLogo"
        android:text="cool"
        android:textSize="20dp"
        android:textColor="#222222"
        android:gravity="center_horizontal|center_vertical"
        android:background="@mipmap/speech"
        android:src="@mipmap/speech" />

    <ImageView
        android:id="@+id/imgText"
        android:layout_below="@id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"

        android:src="@mipmap/splash_text"
        android:contentDescription="BARKT it Logo" />
</RelativeLayout>
</RelativeLayout>